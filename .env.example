# Google Cloud / Vertex AI Configuration
GOOGLE_API_KEY=your-google-api-key

# Google Maps (exposed to browser)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Vertex AI requires these (run: gcloud auth application-default login)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# Backend
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Optional: LangSmith tracing
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=sidequest-dev
LANGSMITH_TRACING=false

# Agent Logging System Configuration
# Log level: DEBUG, INFO, WARNING, ERROR
AGENT_LOG_LEVEL=INFO

# Directory for log files
AGENT_LOG_DIR=backend/logs

# Enable/disable file logging
AGENT_LOG_FILE_ENABLED=true

# Enable/disable console logging
AGENT_LOG_CONSOLE_ENABLED=true

# Log format: json, text, both
AGENT_LOG_FORMAT=json

# Sanitize sensitive data (API keys, credentials)
AGENT_LOG_SANITIZE=true

# Maximum log file size in MB before rotation
AGENT_LOG_MAX_SIZE_MB=100

# Number of log entries to buffer before flushing
AGENT_LOG_BUFFER_SIZE=10

# Flush interval in seconds
AGENT_LOG_FLUSH_INTERVAL=5

# Log retention period in days
AGENT_LOG_RETENTION_DAYS=30
